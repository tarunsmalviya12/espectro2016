<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wine"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/eventImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:alpha="0.9"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/eventImg"
                    android:background="@color/colorPrimary70"
                    android:orientation="vertical"
                    android:padding="@dimen/dim_10">

                    <TextView
                        android:id="@+id/nameTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/infoTxt"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dim_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/infoTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dim_11" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_1"
                android:background="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/registerBtn"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_35"
                android:layout_margin="@dimen/dim_15"
                android:background="@drawable/button"
                android:text="Register Now"
                android:textColor="@color/wine" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim_22"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/dim_5"
                    android:src="@drawable/clock_icon" />

                <TextView
                    android:id="@+id/timeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim_12"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dim_1"
                    android:layout_weight="1" />


                <TextView
                    android:id="@+id/venueTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim_12"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim_22"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/dim_5"
                    android:src="@drawable/venue_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dim_22"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/dim_5"
                    android:src="@drawable/price_icon" />

                <TextView
                    android:id="@+id/priceTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim_12"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/descTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_5"
                android:padding="@dimen/dim_10"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_14" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="@dimen/dim_45"
            android:layout_height="@dimen/dim_45"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/dim_10"
            android:scaleType="centerInside"
            android:src="@drawable/back" />
    </RelativeLayout>
</ScrollView>