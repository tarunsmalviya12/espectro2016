<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash">

    <ImageView
        android:id="@+id/frame1Img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dim_10"
        android:adjustViewBounds="true"
        android:alpha="0.9" />

    <ImageView
        android:id="@+id/frame2Img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dim_30"
        android:adjustViewBounds="true"
        android:alpha="0.9" />

    <ImageView
        android:id="@+id/frame3Img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:alpha="0.9" />

    <ImageView
        android:id="@+id/frame4Img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/dim_50"
        android:adjustViewBounds="true"
        android:alpha="0.9" />

    <TextView
        android:id="@+id/espectroTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Espectro"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dim_38"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mbmTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dim_10"
        android:gravity="center"
        android:text="M.B.M. Engineering College, Jodhpur"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dim_14"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dim_16"
        android:layout_marginRight="@dimen/dim_16"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.5" />

        <RelativeLayout
            android:id="@+id/emailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dim_30"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:alpha="0.7"
                android:padding="@dimen/dim_5"
                android:scaleType="centerInside"
                android:src="@drawable/email_icon" />

            <EditText
                android:id="@+id/emailEdt"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_35"
                android:layout_centerVertical="true"
                android:alpha="0.95"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/dim_45"
                android:paddingRight="@dimen/dim_45"
                android:textColor="@color/clouds"
                android:textColorHint="@color/clouds"
                android:textCursorDrawable="@null" />
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_1"
            android:layout_marginBottom="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_10"
            android:alpha="0.3"
            android:background="@color/clouds" />

        <RelativeLayout
            android:id="@+id/passwordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dim_30"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:alpha="0.7"
                android:padding="@dimen/dim_5"
                android:scaleType="centerInside"
                android:src="@drawable/password_icon" />

            <EditText
                android:id="@+id/passwordEdt"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_35"
                android:layout_centerVertical="true"
                android:alpha="0.95"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dim_45"
                android:paddingRight="@dimen/dim_45"
                android:textColor="@color/clouds"
                android:textColorHint="@color/clouds"
                android:textCursorDrawable="@null" />
        </RelativeLayout>

        <Button
            android:id="@+id/signInBtn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim_35"
            android:layout_marginTop="@dimen/dim_15"
            android:background="@drawable/button"
            android:text="Sign In"
            android:textColor="@color/orange" />

        <TextView
            android:id="@+id/forgotPasswordTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/dim_10"
            android:text="forgot your password?"
            android:textColor="@color/forgot_password_link"
            android:textSize="@dimen/dim_11" />

        <View
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/registerTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10"
            android:padding="@dimen/dim_10"
            android:text="REGSITER NOW"
            android:textColor="@color/forgot_password_link"
            android:textSize="@dimen/dim_14"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/registerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dim_16"
        android:layout_marginRight="@dimen/dim_16"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/nameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dim_30"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:alpha="0.7"
                android:padding="@dimen/dim_5"
                android:scaleType="centerInside"
                android:src="@drawable/name_icon" />

            <EditText
                android:id="@+id/nameEdt"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_35"
                android:layout_centerVertical="true"
                android:alpha="0.95"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/dim_45"
                android:paddingRight="@dimen/dim_45"
                android:textColor="@color/clouds"
                android:textColorHint="@color/white20"
                android:textCursorDrawable="@null" />
        </RelativeLayout>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_1"
            android:layout_marginBottom="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_10"
            android:alpha="0.3"
            android:background="@color/clouds" />

        <RelativeLayout
            android:id="@+id/remailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dim_30"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:alpha="0.7"
                android:padding="@dimen/dim_5"
                android:scaleType="centerInside"
                android:src="@drawable/email_icon" />

            <EditText
                android:id="@+id/remailEdt"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_35"
                android:layout_centerVertical="true"
                android:alpha="0.95"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/dim_45"
                android:paddingRight="@dimen/dim_45"
                android:textColor="@color/clouds"
                android:textColorHint="@color/white20"
                android:textCursorDrawable="@null" />
        </RelativeLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_1"
            android:layout_marginBottom="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_10"
            android:alpha="0.3"
            android:background="@color/clouds" />

        <RelativeLayout
            android:id="@+id/rpasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dim_30"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:alpha="0.7"
                android:padding="@dimen/dim_5"
                android:scaleType="centerInside"
                android:src="@drawable/password_icon" />

            <EditText
                android:id="@+id/rpasswordEdt"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_35"
                android:layout_centerVertical="true"
                android:alpha="0.95"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dim_45"
                android:paddingRight="@dimen/dim_45"
                android:textColor="@color/clouds"
                android:textColorHint="@color/white20"
                android:textCursorDrawable="@null" />
        </RelativeLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_1"
            android:layout_marginBottom="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_10"
            android:alpha="0.3"
            android:background="@color/clouds" />

        <RelativeLayout
            android:id="@+id/phoneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dim_30"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:alpha="0.7"
                android:padding="@dimen/dim_5"
                android:scaleType="centerInside"
                android:src="@drawable/phone_icon" />

            <EditText
                android:id="@+id/phoneEdt"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim_35"
                android:layout_centerVertical="true"
                android:alpha="0.95"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="Contact Number"
                android:inputType="phone"
                android:paddingLeft="@dimen/dim_45"
                android:paddingRight="@dimen/dim_45"
                android:textColor="@color/clouds"
                android:textColorHint="@color/white20"
                android:textCursorDrawable="@null" />
        </RelativeLayout>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_1"
            android:layout_marginBottom="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_10"
            android:alpha="0.3"
            android:background="@color/clouds" />

        <RelativeLayout
            android:id="@+id/collegeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/dim_30"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:alpha="0.7"
                android:padding="@dimen/dim_5"
                android:scaleType="centerInside"
                android:src="@drawable/college_icon" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/collegeSpr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_35"
                android:layout_marginLeft="@dimen/dim_45"
                android:gravity="center"
                android:paddingRight="@dimen/dim_45" />
        </RelativeLayout>

        <TextView
            android:id="@+id/noteTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim_10"
            android:autoLink="email"
            android:gravity="center"
            android:text="NOTE : Please leave us a email on espectro@espectro2016.in with your college details if not listed above."
            android:textColor="@color/white"
            android:textSize="@dimen/dim_11" />

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim_35"
            android:layout_marginTop="@dimen/dim_20"
            android:background="@drawable/button"
            android:text="Register"
            android:textColor="@color/brown" />

        <View
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/signInTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10"
            android:padding="@dimen/dim_10"
            android:text="SIGN IN"
            android:textColor="@color/forgot_password_link"
            android:textSize="@dimen/dim_14"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="@dimen/dim_45"
        android:layout_height="@dimen/dim_45"
        android:adjustViewBounds="true"
        android:alpha="0.0"
        android:background="@android:color/transparent"
        android:padding="@dimen/dim_10"
        android:scaleType="centerInside"
        android:src="@drawable/back"
        android:visibility="gone" />
</RelativeLayout>